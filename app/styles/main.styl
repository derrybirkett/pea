@import "../bower_components/bootstrap-stylus/bootstrap/index.styl"

/*-----------------------
  Layout
-----------------------*/
.sidebar
  text-align right

.header
  padding 70px 0px 20px 0px


/*-----------------------
  Type
-----------------------*/
smallcaps()
  text-transform uppercase
  font-size 12px

* {
  font-family: "brandon-grotesque";
}

h1
  smallcaps()

em
  font-family: "adobe-garamond-pro";

/*-----------------------
  Components
-----------------------*/
.card
  img
    height 40px
    width 40px

  h1,h5
    margin 5px 0px

  h1
    font-weight 600

  h5
    smallcaps()
    color #ccc

.post
  margin-bottom 40px
  h1
    font-weight 800
    margin-bottom 0.3em


  p
    color $gray-light
